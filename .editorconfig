# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,jsx,ts,tsx,astro}]
charset = utf-8

# 2 space indentation
[*.{js,jsx,ts,tsx,astro,css,scss,html}]
indent_style = space
indent_size = 2
